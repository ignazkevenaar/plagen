{
  "$id": "interchange-file.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "interchange-file",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "licencePlate": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "color": {
            "type": "string"
          },
          "serial": {
            "type": "string"
          },
          "office": {
            "type": "string"
          },
          "classification": {
            "type": "string"
          },
          "kana": {
            "type": "string"
          },
          "showSeal": {
            "type": "boolean"
          },
          "showScrews": {
            "type": "boolean"
          }
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "export": {
          "type": "object",
          "properties": {
            "width": {
              "type": "number"
            },
            "unit": {
              "type": "string",
              "enum": ["cm", "mm", "in", "px"]
            },
            "dpi": {
              "type": "number"
            },
            "jiko-shiki": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
